@model  IEnumerable<Wall.Models.ApplicationUser>
@{
    ViewBag.Title = "Usuários";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped table-bordered table-condensed table-hover auto">
    <thead>
        <tr>
            <th scope="col">Usuário</th>
            <th scope="col">E-mail</th>
            <th scope="col">Bloqueio Habilitado</th>
            <th scope="col">Término do Bloqueio</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            if (!(usuario.UserName == "Administrador"))
            {
                <tr>
                    <td>@Html.DisplayTextFor(x => usuario.UserName)</td>
                    <td>@Html.DisplayTextFor(x => usuario.Email)</td>
                    <td>@Html.DisplayTextFor(x => usuario.LockoutEnabled)</td>
                    <td>@Html.DisplayTextFor(x => usuario.LockoutEndDateUtc)</td>
                    @if (!(usuario.LockoutEnabled))
                    {
                        <td>
                            @Html.ActionLink("Editar", "Edit", "Admin", new { id = usuario.Id }, new { })
                            @Html.ActionLink("Deletar", "Delete", "Admin", new { id = usuario.Id }, new { })
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>